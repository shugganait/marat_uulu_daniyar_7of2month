<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="parent_style" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">160dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="grey_btn_style" parent="parent_style">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/grey</item>
    </style>
    <style name="orange_btn_style" parent="parent_style">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
    </style>
    <style name="darkGrey_btn_style" parent="parent_style">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/dark_grey</item>
    </style>
    <style name="selectors">
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:drawableEnd">@drawable/ic_next</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="policy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:textColor">@color/grey_blue</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>