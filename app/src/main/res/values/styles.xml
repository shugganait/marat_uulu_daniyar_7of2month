<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="parent_style" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">160dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="grey_btn_style" parent="parent_style">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/grey</item>
    </style>
    <style name="orange_btn_style" parent="parent_style">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
    </style>
    <style name="darkGrey_btn_style" parent="parent_style">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/dark_grey</item>
    </style>
</resources>